<div class="content">
  <div class="content-fluid">
    <h4 class="page-title">
      Thêm sản phẩm
    </h4>
    <div class="card">
      <div class="card-body">
        <form action="/categories/create" method="post">

              <div class="form-group">
                <label for="code">Mã sản phẩm</label>
                <input name="code" type="text" value="<%=category?.code%>" class="form-control categoryInput" id="codeModal" placeholder="Nhập mã sản phẩm" />
                <small class="form-text text-muted text-danger"></small>
              </div>
              <div class="form-group">
                <label for="name">Tên sản phẩm</label>
                <input name="name" type="text" value="<%=category?.name%>" class="form-control categoryInput" id="nameModal" placeholder="Nhập tên sản phẩm" />
                <small class="form-text text-muted text-danger"></small>
              </div>
              <div class="form-group">
                <label for="searchString">Chuỗi tìm kiếm</label>
                <input name="searchString" type="text" value="<%=category?.searchString%>" class="form-control categoryInput" id="searchStringModal" placeholder="chuỗi tìm kiếm" />
                <small class="form-text text-muted text-danger"></small>
              </div>
              <div class="form-group">
                <label for="image">Link hình ảnh</label>
                <input name="image" type="text" value="<%=category?.image%>" class="form-control categoryInput" id="imageModal  " placeholder="Nhập link ảnh" />
                <small class="form-text text-muted text-danger"></small>
              </div>
            </form>
      </div>
    </div>
  </div>
</div>