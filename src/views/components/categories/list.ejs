<div class="content">
  <div class="content-fluid">
    <div class="flex justify-content-between mb-5">
      <h4 class="page-title mn-0">Danh mục sản phẩm</h4>
      <a class="btn btn-success" href="/categories/create">Thêm sản phẩm</a>
      <!-- <a class="btn btn-success" onclick="toggleCategory()">Tạo modal</a> -->
    </div>
    <div class="flex justify-content-end mb-1">
      <div class="form-group flex full-width items-center">
        <label for="defaultSelect " class="white-space">Sắp xếp</label>
        <select class="form-control form-control max-w-10 mb-4px" id="defaultSelect" onchange="changeSort(event)">
          <% sortObject.forEach(function(sortObject, index){ %>
          <%if(sortObject.code === sort){%>
          <option value="<%=sortObject.code%>" selected><%=sortObject.name%></option>
          <%}%>
              <%if(sortObject.code !== sort){%>
          <option value="<%=sortObject.code%>"><%=sortObject.name%></option>
          <%}%>
          <%})%>
        </select>
      </div>
    </div>
    <% if ( categories && categories.length> 0 ) { %>
    <div class="card">
      <table class="table table-head-bg-success">
        <thead>
          <tr>
            <th scope="col">STT</th>
            <th scope="col">Image</th>
            <th scope="col">Code</th>
            <th scope="col">Name</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody id="listCategory">
          <% categories.forEach(function(category, index){ %>
          <tr>
            <td>
              <%=index+1%>
            </td>
            <td>
              <img src="/static/assets/img/<%=category.image%>" alt="image" class="category-label" />
            </td>
            <td>
              <%=category.code%>
            </td>
            <td>
              <%=category.name%>
            </td>
            <td>
              <a class="btn btn-primary btn-sm" href="/categories/update/<%=category._id%>">Sửa</a>
              <a class="btn btn-danger btn-sm" href="/categories/delete/<%=category._id%>">Xóa</a>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <div class="card-body flex justify-content-center items-center">
      <div class="form-group flex justify-content-center items-center">
        <label for="defaultSelect" class="white-space">Page Size</label>
        <select class="form-control form-control" id="defaultSelect" onchange="changePageSize(event)">
          <% [5, 10, 20, 30, 50].forEach(function(pageSizeOption, index){ %>
          <%if(pageSizeOption===pageSize){ %>
          <option>
            <%=pageSizeOption%>
          </option>
          <% } %>
          <%if(pageSizeOption !==pageSize){ %>
          <option>
            <%=pageSizeOption%>
          </option>
          <% } %>
          <% }); %>
        </select>
      </div>
      <div class="card-body">
        <ul class="pagination pg-primary flex justify-content-center">
          <li class="page-item">
            <a class="page-link" aria-label="Previous" onclick="prevPage()">
              <span aria-hidden="true">&laquo;</span>
              <span class="sr-only">Previous</span>
            </a>
          </li>
          <% for(let i = 1; i <= countPagination; i++) { %>
            <li class="page-item <%= (page === i) ? 'active' : '' %>">
              <a class="page-link" href="#" onclick="changePage(`<%= i %>`)">
                <%= i %>
              </a>
            </li>
          <% } %>

          <li class="page-item">
            <a class="page-link" aria-label="Next" onclick="nextPage()">
              <span aria-hidden="true">&raquo;</span>
              <span class="sr-only">Next</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <% } else { %>
    <h4>Hiện chưa có sản phẩm nào</h4>
    <% } %>
  </div>
</div>